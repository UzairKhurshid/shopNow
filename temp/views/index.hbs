                  <div class="dropdown">
                  <a href="#" class="btn btn-white py-3 px-5 rounded-0 d-block d-sm-inline-block">Club Membership
                    <div class="dropdown-content">
                      <a href="login">SignIn</a>
                      <a href="signup">SignUp</a>
                  </div>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>  


    
    <div class="site-section" id="products-section">
      <div class="container">
        <div class="row mb-5 justify-content-center">
          <div class="col-md-6 text-center">
            <h3 class="section-sub-title">Popular Products</h3>
            <h2 class="section-title mb-3">Our Products</h2>
            </div>
        </div>
        <div class="row">


          {{#if products}} 
            {{#each products}}
           <div class="col-lg-4 col-md-6 mb-5">
            <div class="product-item">
              <figure>
                <img src="images/model_1.png" alt="Image" class="img-fluid">
              </figure>
              <div class="px-4">
                <h3>{{this.nameOfProduct}}</h3>
                <h3>{{this.priceOfProduct}} $</h3>
                <div class="mb-3">
                  <span class="meta-icons mr-3"><a href="#" class="mr-2"><span class="icon-star text-warning"></span></a> 5.0</span>
                  <span class="meta-icons wishlist"><a href="#" class="mr-2"><span class="icon-heart"></span></a> 29</span>
                </div>
                <p class="mb-4">Lorem ipsum dolor sit amet, consectetur adipisicing.</p>
                <div>
                  <form action="/addToCart" method="POST">
                  <input type="hidden" name="productID" value={{this._id}}>
                  <input type="number" name="quantity"  value="1">
                  <button type="submit" class="btn btn-black mr-1 rounded-0">Cart</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
        {{else}}
              <h2>No product Found</h2>
        {{/if}}


        </div>
      </div>
    </div>
    
    <div class="site-blocks-cover inner-page-cover overlay get-notification"  style="background-image: url(images/hero_2.jpg); background-attachment: fixed;" data-aos="fade">
      <div class="container">

        <div class="row align-items-center justify-content-center">
          <form class="col-md-7" action="/subscribe" method="post">
            <h2>Get notified on each updates.</h2>
            <div class="d-flex mb-4">
              <input type="email" name="email" class="form-control rounded-0" placeholder="Enter your email address">
              <input type="submit" class="btn btn-white btn-outline-white rounded-0" value="Subscribe">
            </div>
            <p>Enter your email to Subscribe and to get notifications on new products.</p>
          </form>
        </div>

      </div>
    </div>

 

