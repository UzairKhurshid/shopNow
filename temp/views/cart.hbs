  <div class="site-wrap">


    <header class="site-navbar py-4 bg-white js-sticky-header site-navbar-target" role="banner">

      <div class="container">
        <div class="row align-items-center">
          
          <div class="col-6 col-xl-2">
            <h1 class="mb-0 site-logo"><a href="/" class="text-black mb-0">ShopNow<span class="text-primary">.</span> </a></h1>
          </div>
          <div class="col-12 col-md-10 d-none d-xl-block">
            <nav class="site-navigation position-relative text-right" role="navigation">

              <ul class="site-menu main-menu js-clone-nav mr-auto d-none d-lg-block">
                <li><a href="#home" class="nav-link">Home</a></li>
                <li><a href="/" class="nav-link">Products</a></li>
                <li><a href="#cart-section" class="nav-link">Cart</a></li>
                <li><a href="/" class="nav-link">About Us</a></li>
                <li><a href="/" class="nav-link">Blog</a></li>
                <li><a href="/" class="nav-link">Contact</a></li>
                
              </ul>
            </nav>
          </div>


          <div class="col-6 d-inline-block d-xl-none ml-md-0 py-3" style="position: relative; top: 3px;"><a href="#" class="site-menu-toggle js-menu-toggle text-black float-right"><span class="icon-menu h3"></span></a></div>

        </div>
      </div>
      
    </header>

  
     
    <div class="site-blocks-cover overlay" style="background-image: url(images/hero_2.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
      <div class="container" id="home">
        <div class="row align-items-center justify-content-center">

          <div class="col-md-12" data-aos="fade-up" data-aos-delay="400">
                        
            <div class="row mb-4">
              <div class="col-md-7">
                <h1>Shop With Us</h1>
                <p class="mb-5 lead">Lorem ipsum dolor sit amet consectetur adipisicing elit. Laboriosam assumenda ea quo cupiditate facere deleniti fuga officia.</p>
                <div>
                  <a href="/dashboard" class="btn btn-white btn-outline-white py-3 px-5 rounded-0 mb-lg-0 mb-2 d-block d-sm-inline-block">Shop Now</a>
                  <div class="dropdown">
                  <a href="#" class="btn btn-white py-3 px-5 rounded-0 d-block d-sm-inline-block">Club Membership
                    <div class="dropdown-content">
                      <a href="login">SignIn</a>
                      <a href="signup">SignUp</a>
                  </div>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>  


 <div class="site-section" id="cart-section">
      <div class="container">
        <div class="row mb-5 justify-content-center">
          <div class="col-md-6 text-center">
            <h2 class="section-title mb-3">Cart</h2>
            </div>
        </div>

            <div class="row">
 

          {{#if products}}
            {{#each products}}
           <div class="col-lg-4 col-md-6 mb-5">
            <div class="product-item">
              <figure>
                <img src="images/model_1.png" alt="Image" class="img-fluid">
              </figure>
              <div class="px-4">
                 <h3>{{this.productID}}</h3>
                <h3>quantity  {{this.quantity}} </h3>
                <div class="mb-3">
                  <span class="meta-icons mr-3"><a href="#" class="mr-2"><span class="icon-star text-warning"></span></a> 5.0</span>
                  <span class="meta-icons wishlist"><a href="#" class="mr-2"><span class="icon-heart"></span></a> 29</span>
                </div>
                <p class="mb-4">Lorem ipsum dolor sit amet, consectetur adipisicing.</p>
                <div>
                  <form action="removeFromCart" method="POST">
                    <input type="hidden" name="cartItemID" value={{this._id}}>
                    <button type="submit" class="btn btn-black btn-outline-black ml-1 rounded-0">Remove From Cart</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
        {{else}}
              <h2>No product Found</h2>
        {{/if}}


        </div>



      
  
